{
	"name": "ritzkick",
	"private": true,
	"scripts": {
		"start": "env-cmd -f ./env/.prod.env node server.js",
		"start-test": "env-cmd -f ./env/.prod.test.env node server.js",
		"dev": "env-cmd -f ./env/.local.env nodemon server.js",
		"build": "next build",
		"postbuild": "next-sitemap",
		"lint": "next lint",
		"test": "env-cmd -f ./env/.test.env jest --runInBand",
		"test-ci": "env-cmd -f ./env/.test.ci.env jest --runInBand",
		"test-dev": "env-cmd -f ./env/.test.env jest --watch --runInBand"
	},
	"jest": {
		"testEnvironment": "node",
		"testTimeout": 30000
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^1.2.36",
		"@fortawesome/free-brands-svg-icons": "^5.15.4",
		"@fortawesome/free-regular-svg-icons": "^5.15.4",
		"@fortawesome/free-solid-svg-icons": "^5.15.4",
		"@fortawesome/react-fontawesome": "^0.1.17",
		"axios": "^0.25.0",
		"bcryptjs": "^2.4.3",
		"chalk": "^4.1.2",
		"chart.js": "^3.7.0",
		"chartjs-plugin-zoom": "^1.2.0",
		"dotenv": "^14.3.2",
		"env-cmd": "^10.1.0",
		"express": "^4.17.2",
		"express-jsdoc-swagger": "^1.6.7",
		"jsonwebtoken": "^8.5.1",
		"moment": "^2.29.1",
		"mongoose": "^6.1.8",
		"next": "12.0.9",
		"next-sitemap": "^2.1.9",
		"nodemailer": "^6.7.2",
		"react": "17.0.2",
		"react-bootstrap": "^2.1.1",
		"react-chartjs-2": "^4.0.1",
		"react-dom": "17.0.2",
		"sass": "^1.49.0",
		"validator": "^13.7.0"
	},
	"devDependencies": {
		"eslint": "8.7.0",
		"eslint-config-next": "12.0.9",
		"jest": "^27.4.7",
		"nodemon": "^2.0.15",
		"supertest": "^6.2.2"
	},
	"resolve": {
		"alias": {
			"chart.js": "${path.resolve(SRC_PATH, 'empty')}"
		}
	}
}
